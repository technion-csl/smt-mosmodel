	$(CREATE_SLIDING_WINDOW_LAYOUTS_SCRIPT) \
		--weight=$(WEIGHT) \
		--memory_footprint=$(MEMORY_FOOTPRINT_FILE) \
		--hot_region=$(HOT_REGION_FILE) \
		--num_layouts=$(NUM_LAYOUTS) \
		--output=$@


