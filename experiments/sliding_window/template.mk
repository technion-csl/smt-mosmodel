MODULE_NAME := $(SLIDING_WINDOW_MODULE_NAME)/window_$(SLIDING_WINDOW_WEIGHT)

include $(EXPERIMENTS_TEMPLATE)

$(LAYOUTS_FILE): WEIGHT := $(SLIDING_WINDOW_WEIGHT)
$(LAYOUTS_FILE): $(HOT_REGIONS_FILE) $(MEMORY_FOOTPRINT_FILE)
